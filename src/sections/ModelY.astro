---
import Section from '../layouts/Section.astro';
---

<Section>
  <div slot="header">
    <h2 class="text-gray-800 text-[40px] font-semibold">Model Y</h2>
    <p class="text-gray-800 text-sm">Starting at $40,240</p>
    <p class="text-gray-800 text-sm">After Federal Tax Credit</p>
  </div>
  <div class="pb-[30px] px-6" slot="footer">
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-8 pb-8"
    >
      <a
        href=""
        class="py-3 w-full md:w-[280px] bg-white rounded text-gray-800 text-sm hover:bg-neutral-100"
        >Explore Inventory</a
      >
      <a
        href=""
        class="py-3 w-full md:w-[280px] bg-gray-800 rounded text-white text-sm hover:bg-gray-900"
        >Custom Order</a
      >
    </div>
  </div>
  <img
    class="h-full w-full object-cover"
    slot="media"
    src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_2400,w_2880,c_fit,f_auto,q_auto:best/Homepage-Model-Y-Global-Desktop"
  />
</Section>
