---
import Section from '../layouts/Section.astro';
---

<Section>
  <div slot="header">
    <h2 class="text-gray-800 text-[40px] font-semibold">Solar Roof</h2>
    <p class="text-gray-800 text-sm underline underline-offset-[6px]">
      Produce Clean Energy From Your Roof
    </p>
  </div>
  <div class="pb-[30px]" slot="footer">
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-8 pb-8"
    >
      <a
        href=""
        class="w-[280px] py-3 bg-white rounded text-gray-800 text-sm hover:bg-neutral-100"
        >Order Now</a
      >
      <a
        href=""
        class="w-[280px] py-3 bg-gray-800 rounded text-white text-sm hover:bg-gray-900"
        >Learn More</a
      >
    </div>
  </div>
  <img
    class="h-full w-full object-cover"
    slot="media"
    src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_1800,w_2880,c_fit,f_auto,q_auto:best/Homepage-SolarRoof-Desktop-Global"
  />
</Section>
